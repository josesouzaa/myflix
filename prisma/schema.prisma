// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  uuid        String     @id @default(uuid())
  name        String
  email       String
  avatar      String?
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  favorites   Favorite[]
}

model Favorite {
  uuid         String  @id @default(uuid())
  id           Int
  title        String
  genres       String?
  release_date String
  vote_average Int
  poster_path  String
  overview     String
  User         User?   @relation(fields: [userUuid], references: [uuid])
  userUuid     String?
}
